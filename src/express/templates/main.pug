    const formatAnnounce = (text) => {
      if (text.length <= 100) {
        return text
      } else {
        return text.slice(0, 100) + `...`;
      }
    }
    const formatDate = (date) => {
      const newdate = new Date(date);
      const formatMonth = (m) => {
        if (m < 10) {
          return `0${m}`;
        }
        return m;
      };
      return `${formatMonth(newdate.getUTCDate())}.${formatMonth(newdate.getMonth() + 1)}.${newdate.getUTCFullYear()}`;
    }
